<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<!-- File target -->
		<target name="file" xsi:type="File" fileName="C:\Users\Kiu-Student\Desktop\LibraryManagement\Application\Logs\logfile.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=ToString}}"/>

		<!-- Console target -->
		<target name="console" xsi:type="Console" layout="${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:${newline}${exception:format=ToString}}"/>
	</targets>
	<rules>
		<!-- Rules for file logging -->
		<logger name="*" minlevel="Info" writeTo="file"/>

		<!-- Rules for console logging -->
		<logger name="*" minlevel="Debug" writeTo="console"/>
	</rules>
</nlog>
